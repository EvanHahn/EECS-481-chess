<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_homescreen"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Homescreen" >
    
    <view
	    class="ask.scanninglibrary.views.ASKListView"
        android:id="@+id/gamesListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:textColor="@color/games_text_color"
        android:textSize="@dimen/games_text_size" />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/game_button_bar"
        android:orientation="horizontal" >

    <Button
        android:id="@+id/passPlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="@string/pass_play"
        android:textColor="@color/games_text_color"
        android:textSize="@dimen/games_text_size" />

    <Button
        android:id="@+id/netPlayButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.90"
        android:text="@string/network_game"
        android:textColor="@color/games_text_color"
        android:textSize="@dimen/games_text_size" />
    
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:textColor="@color/games_text_color"
        android:textSize="@dimen/games_text_size" />

    </LinearLayout>

</LinearLayout>
